<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waffle" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Wafflemeister"
            android:label="@string/title_activity_wafflemeister"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CustomOrder"
            android:label="@string/title_activity_custom_order"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ShopingCart"
            android:label="@string/title_activity_shoping_cart"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SignatureWaffles"
            android:label="@string/title_activity_signature_waffles"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
